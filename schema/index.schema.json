{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.jsdelivr.net/gh/coffee-cpu/stock-splits-data@main/schema/index.schema.json",
  "title": "Stock Splits Index",
  "description": "Schema for the combined index.json lookup file",
  "type": "object",
  "required": ["$schema", "version", "updated", "totalSplits", "years", "bySymbol"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the index schema"
    },
    "version": {
      "type": "string",
      "description": "Data version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "totalSplits": {
      "type": "integer",
      "description": "Total number of splits across all years",
      "minimum": 0
    },
    "years": {
      "type": "array",
      "description": "List of available years",
      "items": {
        "type": "integer"
      }
    },
    "bySymbol": {
      "type": "object",
      "description": "Lookup by ticker symbol",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "splits"],
        "properties": {
          "name": {
            "type": "string"
          },
          "isin": {
            "type": "string"
          },
          "exchange": {
            "type": "string"
          },
          "splits": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["date", "ratio"],
              "properties": {
                "date": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "ratio": {
                  "type": "string",
                  "pattern": "^\\d+:\\d+$"
                },
                "notes": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "byIsin": {
      "type": "object",
      "description": "Lookup by ISIN to symbol",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
