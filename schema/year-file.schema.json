{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.jsdelivr.net/gh/coffee-cpu/stock-splits-data@main/schema/year-file.schema.json",
  "title": "Yearly Stock Splits File",
  "description": "Schema for yearly stock splits data files",
  "type": "object",
  "required": ["$schema", "year", "updated", "splits"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the year-file schema"
    },
    "year": {
      "type": "integer",
      "description": "The year this file covers",
      "minimum": 1900,
      "maximum": 2100
    },
    "updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "splits": {
      "type": "array",
      "description": "Array of stock split entries",
      "items": {
        "$ref": "split-entry.schema.json"
      }
    }
  },
  "additionalProperties": false
}
